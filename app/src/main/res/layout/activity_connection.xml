<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="1"
        android:baselineAligned="false">

        <ScrollView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/outSeriale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:weightSum="7">

            <ImageButton
                android:id="@+id/linea"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/linea"
                android:scaleType="fitCenter"
                android:src="@drawable/linea" />

            <ImageButton
                android:id="@+id/curva"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/curva"
                android:scaleType="fitCenter"
                android:src="@drawable/curva" />
            <ImageButton
                android:id="@+id/rettangolo"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/quadrato"
                android:scaleType="fitCenter"
                android:src="@drawable/quadrato" />

            <ImageButton
                android:id="@+id/triangolo"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/triangolo_eq"
                android:scaleType="fitCenter"
                android:src="@drawable/triangolo" />

            <ImageButton
                android:id="@+id/parallelo"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/parallelo"
                android:scaleType="fitCenter"
                android:src="@drawable/parallelo" />

            <ImageButton
                android:id="@+id/cerchio"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/cerchio"
                android:scaleType="fitCenter"
                android:src="@drawable/cerchio" />

            <ImageButton
                android:id="@+id/trapezio"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/trapezio"
                android:scaleType="fitCenter"
                android:src="@drawable/trapezio" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="1"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/joystick"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:orientation="vertical"
            tools:ignore="NestedWeights,UselessLeaf">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:orientation="vertical"
            android:weightSum="1"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.50"
                android:orientation="horizontal"
                android:weightSum="1"
                tools:ignore="NestedWeights,UselessLeaf">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Switch
                        android:id="@+id/rotazione_attiva"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.6"
                        android:theme="@style/SCBSwitch" />

                    <TextView
                        android:id="@+id/text_lunghezze"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.2" />

                    <TextView
                        android:id="@+id/posizioni"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.2" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/sali"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="?android:selectableItemBackground"
                    android:baselineAlignBottom="false"
                    android:contentDescription="@string/sali"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sali" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/clear"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:text="@string/clear"
                        android:layout_weight="0.5"/>

                    <Button
                        android:id="@+id/posiziona"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:text="@string/posiziona"
                        android:layout_weight="0.5"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.50"
                android:weightSum="1"
                android:orientation="horizontal"
                tools:ignore="NestedWeights,UselessLeaf">

                <RelativeLayout
                    android:id="@+id/quadrato"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/scendi"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:layout_gravity="start"
                    android:background="?android:selectableItemBackground"
                    android:contentDescription="@string/scendi"
                    android:scaleType="fitCenter"
                    android:src="@drawable/scendi" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/resetx"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:text="@string/resetX"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/resety"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:text="@string/resetY"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/resetz"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:text="@string/resetZ"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/reseta"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:text="@string/resetA"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
